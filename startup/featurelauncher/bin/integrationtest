#!/bin/bash
echo 'Performs a rough test on a running server' # helptext-marker
# e.g. run with
# while mvn -P integrationtest failsafe:integration-test failsafe:verify; do bin/stop; /bin/rm -fr launcher logs/*; bin/start; sleep 20; done
